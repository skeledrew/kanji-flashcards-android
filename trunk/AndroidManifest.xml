<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.daverin.KanjiFlashcards"
      android:versionCode="9"
      android:versionName="1.5.3">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".KanjiFlashcards"
                  android:configChanges="orientation|keyboardHidden"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConfigureDecks"
                   android:label="Choose grade(s)"
                   android:theme="@android:style/Theme.Dialog">
             <intent-filter>
                 <action android:name="android.intent.action.RUN" />
                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
        </activity>
        <activity android:name=".DeckSubSelection"
                  android:label="Choose group(s)"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.RUN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".QuizResults"
                  android:label="Quiz results"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.RUN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="2" />
</manifest> 